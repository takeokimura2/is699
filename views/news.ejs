<%- include("_header") -%>

<h1>Company News - <%= model.company_name %> </h1>

<form action="/news/<%= model.company_id %>" method="post">
  <div class="form-horizontal">

    <%- include("_news") -%>


  </div>
</form>

<% if(type==="post") { %>
  <% if (videos.length===0) { %>
    <h3>No records found!</h3>
    <% } else { %>
      <div class="row">
        <div class="col-md-12">
          <div id="videos">
          <% videos.forEach(video=> { %>
          <h4><%= video.snippet.title %></h4>
          <h6><%= video.snippet.publishedAt %></h6>
          <br>
          <p><%= video.snippet.description %></p>
          <iframe width="420" height="315" src="http://www.youtube.com/embed/<%= video.id.videoId %>" frameborder ="0" allowfullscreen></iframe>
          <br>
          <br>
          <% }) %>
          </div>
        </div>
      </div>
      
    <%  console.log(videos[0]) %>
  <% } %>
<% } %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<%- include("_footer") -%>