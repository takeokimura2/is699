<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uranium</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="/styles.css" type="text/css" rel="stylesheet">
    
</head>

<%- include("_header") -%>
<body>
    <br>
    <h2>Uranium Stock Analysis</h2>

    <div class="m-5">
        <div class="card col-md-8 offset-md-2">
            <canvas id="mineralReserve"></canvas>
        </div>
    </div>

    <div class="m-5">
        <div class="card col-md-8 offset-md-2">
            <canvas id="productionCost"></canvas>
        </div>
    </div>
    
    <script>

    //setup

    const resourcedata = {
        labels: ['Cameco Corp', 'Kazatomprom', 'Nexgen Energy', 'Denison Mines', 'Boss Energy Ltd'],
            datasets: [{
                label: 'Resource Quantity',
                data: [455, 300, 210, 98, 71.6],
                backgroundColor: 'rgba(0, 99, 255, 0.2)',
                borderColor: 'rgba(0, 0, 255, 1.0)',
                borderWidth: 1,
                hoverBackgroundColor: 'pink',
                hoverBorderColor: ['red', 'yellow'],
                hoverBorderColor: 5,
            }]
    }

    const CostofProduction = {
        labels: ['Cameco Corp', 'Kazatomprom', 'Nexgen Energy', 'Denison Mines', 'Boss Energy Ltd'],
            datasets: [{
                label: 'Resource Quantity',
                data: [16, 14, 5.69, 3.33, 31.86],
                backgroundColor: 'rgba(0, 99, 100, 0.2)',
                borderColor: 'rgba(0, 150, 150, 1.0)',
                borderWidth: 1,
                hoverBackgroundColor: 'pink',
                hoverBorderColor: ['red', 'yellow'],
                hoverBorderColor: 5,
            }]
    }
    
    //config

    const configReserveData = {
        type: 'bar',
        data: resourcedata,
        options: {

            plugins: {
            title: {
                display: true,
                text: 'Mineral Reserves ',
                font: {
                    size:15,
                }
            },
            subtitle: {
                display: true,
                text: '(Million lbs of U3O8)',
                color: 'grey',
                font: {
                size: 12,
                family: 'tahoma',
                weight: 'normal',
                style: 'italic'
                },
                padding: {
                bottom: 10
                }
            }
            }

        }

    }

    const configProductionData = {
        type: 'bar',
        data: CostofProduction,
        options: {

            plugins: {
            title: {
                display: true,
                text: 'Cost of Production',
                font: {
                    size:15,
                }
            },
            subtitle: {
                display: true,
                text: '(USD per pound)',
                color: 'grey',
                font: {
                size: 12,
                family: 'tahoma',
                weight: 'normal',
                style: 'italic'
                },
                padding: {
                bottom: 10
                }
            }
            }

        }

    }

    //render init block

    const MineralReserveChart = new Chart(
        document.getElementById('mineralReserve'),
        configReserveData
    );

    const ProductionCostChart = new Chart(
        document.getElementById('productionCost'),
        configProductionData
    );
    
    </script>
    


</body>
</html>



